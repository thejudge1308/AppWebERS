@model AppWebERS.Models.DiagramaModels
@{
    
    ViewBag.Title = "Diagramas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Diagramas</h2>
<ul class="nav nav-tabs">
    <li class="nav-item">
        <a class="nav-link" href="@Url.Action("Detalles", "Proyecto", new { id = ProyectoActual.IdProyecto })">Detalles</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="@Url.Action("ListarRequisitosMinimalista", "Proyecto", new { id = ProyectoActual.IdProyecto })">Requisitos</a>
    </li>
    <li class="nav-item">
        <a class="nav-link active" href="@Url.Action("ListarDiagramas", "Proyecto", new { id = ProyectoActual.IdProyecto})">Diagramas</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="@Url.Action("ListaUsuarios", "Proyecto", new { id = ProyectoActual.IdProyecto })">Usuarios</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="@Url.Action("ListaActores","Proyecto",new { id = ProyectoActual.IdProyecto})">Actores</a>
    </li>
</ul>

<div class="dropdown-divider"></div>

<a href="../../Diagrama/SubirDiagrama/@Model.IdProyecto" class="btn btn-primary w-auto">Agregar diagrama</a>

<div>
    @if (Model.urlsCasosDeUso != null)
    {
        if (Model.urlsCasosDeUso.Count > 0)
        {
            if (Model.urlsCasosDeUso.Count == 1)
            {
                <h3 style="margin-top:20px;margin-bottom:20px">Diagrama Caso de Uso</h3>
            }
            else
            {<h3 style="margin-top:20px;margin-bottom:20px">Diagramas de Casos de Uso</h3> }

            <div class="card-deck">
                @foreach (var im in Model.urlsCasosDeUso)
                {
                    <div class="card">
                        <div class="card-header">
                            @Html.Label(im.nombre)
                        </div>
                        <div class="card-body">
                            <img src=@im.url alt="Card image cap" style="height:auto;width:100%" />
                        </div>
                    </div>
                }
            </div>
        }
    }
</div>
<div>
    @if (Model.urlsaArquiFisica != null)
    {
        if (Model.urlsaArquiFisica.Count > 0)
        {
            if (Model.urlsaArquiFisica.Count == 1) {<h3 style="margin-top:20px;margin-bottom:20px">Diagrama Arquitectura Física</h3> }
            else {<h3 style="margin-top:20px;margin-bottom:20px">Diagramas Arquitectura Física</h3> }
            
            <div class="card-deck">
                @foreach (var im in Model.urlsaArquiFisica)
                {
                    <div class="card">
                        <div class="card-header">
                            @Html.Label(im.nombre)
                        </div>
                        <div class="card-body">
                            <img src=@im.url alt="Card image cap" style="height:auto;width:100%" />
                        </div>
                    </div>
                }
            </div>
        }
    }
</div>
<div>
    @if (Model.urlsArquiLogica != null)
    {
        if (Model.urlsArquiLogica.Count > 0)
        {
            if (Model.urlsArquiLogica.Count ==1) {<h3 style="margin-top:20px;margin-bottom:20px">Diagrama Arquitectura Lógica</h3> }
            else { <h3 style="margin-top:20px;margin-bottom:20px">Diagramas Arquitectura Lógica</h3>}
            
            <div class="card-deck">
                @foreach (var im in Model.urlsArquiLogica)
                {
                    <div class="card">
                        <div class="card-header">
                            @Html.Label(im.nombre)
                        </div>
                        <div class="card-body">
                            <img src=@im.url alt="Card image cap" style="height:auto;width:100%" />
                        </div>
                    </div>
                }
            </div>
        }
    }
</div>

<div class="modal mt-5 mx-auto w-100" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" data-backdrop="true" style="overflow: scroll;">
    <div class="modal-dialog-centered">
       
        <div class="modal-body float-right pl-5 w-100">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <h1 aria-hidden="true">&times;</h1>
            </button>
            <div class="container float-right pl-2">
                <div class="row justify-content-center">
                    <img src="http://www.abiztar.com.mx/articulos/imagenes/caso_de_abuso.gif" alt="Card image cap">
                </div>
            </div>

        </div>
    </div>
    </div>
