@using AppWebERS.Models
@model Usuario
@{
    ViewBag.Title = "Bienvenido a AppWebERS";
}

<h2>@ViewBag.Title.</h2>

<div class="row">
    <div class="col-md-12">

        <section id="loginForm">
            @using(Html.BeginForm("Ingresar", "Login", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" })) {
                @Html.AntiForgeryToken()
                <h4>Inicio de sesión</h4>
                <hr />    
                <div class="col-md-4 offset-md-4">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(m => m.Rut, new { @class = "col-md-12 control-label" })
                        <div class="col-md-12">
                            @Html.TextBoxFor(m => m.Rut, new { @class = "form-control", placeholder = "Ejemplo: 18321456" })

                            @Html.ValidationMessageFor(m => m.Rut, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Contrasenia, new { @class = "col-md-12 control-label" })
                        <div class="col-md-12">
                            @Html.PasswordFor(m => m.Contrasenia, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Contrasenia, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <div class="checkbox">
                               @*Html.CheckBoxFor(m => m.RememberMe)
                                @Html.LabelFor(m => m.RememberMe)*@
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Ingresar" class="btn btn-primary" />
                        </div>
                    </div>
                    @* <p>
        @Html.ActionLink("Registrarse.", "Register")
    </p>
                <div class="col-md-offset-2 col-md-10">
                    <p>
                        @Html.ActionLink("Olvide mi contraseña.", "ForgotPassword")
                    </p>
                </div>
                    *@
                </div>
            }
        </section>
    </div>
