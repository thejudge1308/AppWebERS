<div id="myModal" class="modal">
    <div class="modal-content">
        <div class="modal-header">
            <div id="nombreImagen"></div>
            <span class="close">&times;</span>
        </div>
        <div class="modal-body">
            <img class="img-responsive" id="img01" style="max-width:100%;">
        </div>
        <div class="modal-footer">
        </div>
    </div>
</div>


<script>
    var modal = document.getElementById('myModal');
    var img = document.getElementById('myImg');
    var modalImg = document.getElementById("img01");
    var captionText = document.getElementById("nombreImagen");

    function handleClick(sender) {
        modal.style.display = "block";
        modalImg.src = sender.src;
        captionText.innerHTML = sender.id;
    }

    var span = document.getElementsByClassName("close")[0];

    span.onclick = function () {
        modal.style.display = "none";
    }
</script>
