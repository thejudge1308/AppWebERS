@*
Vista creada por Patricio Quezada    
*@

@using AppWebERS.Models;
@model Proyecto
@{
    ViewBag.Title = "Detalles del proyecto";
}

<h2>Detalles</h2>

<ul class="nav nav-tabs">
    <li class="nav-item">
        <a class="nav-link active" href="#">Detalles</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="#">Notificaciones</a>
    </li>
</ul>



@using(Html.BeginForm("Detalles", "Proyecto", FormMethod.Post, new { @class = "form-horizontal", role = "form" })) {


    <div class="row">
        <div class="col-12">

            @Html.AntiForgeryToken()


            <div class="form-group">
                @Html.LabelFor(p => p.IdProyecto, new { @class = "col-md-12 control-label" })
                <div class="col-12">
                    @Html.TextBoxFor(p => p.IdProyecto, new { @class = "form-control"})
                </div>
            </div>

            <div class="form-group">
                <div class="col-12">
                    @Html.TextBoxFor(p => p.Nombre, new { @class = "form-control", placeholder = "Nombre del proyecto.", Style = "max-width:100%;" })
                    @Html.ValidationMessageFor(p => p.Nombre, "", new { @class = "text-danger" })
                </div>
             
            </div>

            <div class="form-group">
                <div class="col-12">
                    @Html.TextAreaFor(p => p.Proposito, new { @class = "form-control", placeholder = "Proposito.", Style = "max-width:100%;" })
                    @Html.ValidationMessageFor(p => p.Proposito, "", new { @class = "text-danger" })
                </div>
                
            </div>

            <div class="form-group">
                <div class="col-12">
                    @Html.TextAreaFor(p => p.Alcance, new { @class = "form-control", placeholder = "Alcance.", Style = "max-width:100%;" })
                    @Html.ValidationMessageFor(p => p.Alcance, "", new { @class = "text-danger" })
                </div>
               
            </div>

            <div class="form-group">
                <div class="col-12">
                    @Html.TextAreaFor(p => p.Contexto, new { @class = "form-control", placeholder = "Contexto.", Style = "max-width:100%;" })
                    @Html.ValidationMessageFor(p => p.Contexto, "", new { @class = "text-danger" })
                </div>
             
            </div>

            <div class="form-group">
                <div class="col-12">
                    @Html.TextAreaFor(p => p.Definiciones, new { @class = "form-control", placeholder = "Definiciones.", Style = "max-width:100%;" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-12">
                    @Html.TextAreaFor(p => p.Acronimos, new { @class = "form-control", placeholder = "Acronimos.", Style = "max-width:100%;" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-12">
                    @Html.TextAreaFor(p => p.Abreviaturas, new { @class = "form-control", placeholder = "Abreviaturas.", Style = "max-width:100%;" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-12">
                    @Html.TextAreaFor(p => p.Referencias, new { @class = "form-control", placeholder = "Referencias.", Style = "max-width:100%;" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-12">
                    @Html.TextAreaFor(p => p.AmbienteOperacional, new { @class = "form-control", placeholder = "Ambiente operacional.", Style = "max-width:100%;" })
                    @Html.ValidationMessageFor(p => p.AmbienteOperacional, "", new { @class = "text-danger" })
                </div>
               
            </div>

            <div class="form-group">
                <div class="col-12">
                    @Html.TextAreaFor(p => p.RelacionProyectos, new { @class = "form-control", placeholder = "Relación con otros proyectos.", Style = "max-width:100%;" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-12">
                    <input type="submit" value="Guardar cambios" class="btn btn-primary" />
                </div>
            </div>

        </div>
    </div>

}





@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
