@model List<AppWebERS.Models.NombreProyecto>

@{
    /**/
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    ViewBag.Title = "Proyectos";

}


<h2>@ViewBag.Title.</h2>


<!-- Bootstrap CSS -->
<!-- jQuery first, then Bootstrap JS. -->
<!-- Nav tabs -->

<ul class="nav nav-tabs" role="tablist">

    @{
        if (Model.ElementAt(0).Nombre == "SYSADMIN")
        {
            <li class="nav-item" id="myTab1">
                <a class="nav-link" href="#todos" role="tab" data-toggle="tab">Todos</a>
            </li>

        }
        else
        {
            <li class="nav-item" id="myTab2">
                <a class="nav-link" href="#asociados" role="tab" data-toggle="tab">Asociados</a>
            </li>
            <li class="nav-item" id="myTab3">
                <a class="nav-link" href="#noasociados" role="tab" data-toggle="tab">No asociados</a>
            </li>


        }
    }


</ul>

<!-- Tab panes -->
<div class="tab-content">
    <div role="tabpanel" class="tab-pane fade in active" id="asociados">
        @{int posicion = 0; }

        @for (int i = 0; i < Model.Count; i++)
        {

            if (Model.ElementAt(i).Nombre != "mitad")
            {

                <div class="card">
                    <div class="card-header">

                        @Model.ElementAt(i).Nombre
                    </div>
                    <div class="card-body">
                        <h5 class="card-title"></h5>
                        <p class="card-text"></p>
                        <a href="Detalles/@Model.ElementAt(i).Id" class="btn btn-primary">Ver detalle</a>
                    </div>
                </div>
                <br><br>
            }
            else
            {

                posicion = i + 1;
                break;
            }
        }

    </div>


    <div role="tabpanel" class="tab-pane fade" id="noasociados">
        @for (int i = posicion; i < Model.Count; i++)
        {
            if (Model.ElementAt(i).Nombre != "mitad")
            {
                <div class="card">
                    <div class="card-header">

                        @Model.ElementAt(i).Nombre
                    </div>
                    <div class="card-body">
                        <h5 class="card-title"></h5>
                        <p class="card-text"></p>
                        <!--<a href="#" class="btn btn-primary">Unirse</a>-->
                        <a href="#" class="btn btn-primary" onclick="location.href='@Url.Action("AgregarUsuarioAProyecto", "Proyecto", new {proyecto1=Model.ElementAt(i).Id })'">Unirse</a>
                    </div>
                </div>
                <br><br>
            }

        }
    </div>



    <div role="tabpanel" class="tab-pane fade in active" id="todos">


        @foreach (var proyecto in Model)
        {
            if (proyecto.Nombre != "mitad" & proyecto.Nombre != "SYSADMIN")
            {
                <div class="card">
                    <div class="card-header">
                        @proyecto.Nombre
                    </div>
                    <div class="card-body">
                        <h5 class="card-title"></h5>
                        <p class="card-text"></p>
                        <a href="Detalles/@proyecto.Id" class="btn btn-primary">Ver detalle</a>
                        @{
                            if (proyecto.Estado == "habilitado")
                            {
                                <a href="#" class="btn btn-primary" onclick="location.href='@Url.Action("DeshabilitarProyecto", "Proyecto", new {id=proyecto.Id })'">Deshabilitar</a>

                            }
                            else
                            {
                                <a href="#" class="btn btn-primary" onclick="location.href='@Url.Action("HabilitarProyecto", "Proyecto", new {id=proyecto.Id })'">Habilitar</a>

                            }
                        }

                    </div>
                </div>
                <br><br>
            }

        }

    </div>

</div>

<div>
    <a class="btn btn-primary" href="@Url.Action("CrearProyecto","Proyecto")">Crear nuevo proyecto</a>
</div>

